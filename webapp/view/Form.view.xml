<mvc:View
    controllerName="appcatalog.controller.Main"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout"
>
    <Page
        id="form"
        title="{i18n>title}"
        showNavButton="true"
        navButtonPress="onNavBack"
    >
        <content>
            <l:Grid
                defaultIndent="XL3 L3 M0 S0"
                defaultSpan="XL6 L6 M6 S12"
            >
                <VBox
                    class="sapUISmallMargin"
                    alignContent="SpaceAround"
                >
                    <f:Form
                        id="FormGeneral"
                        editable="true"
                    >
                        <f:title>
                            <core:Title text="General Info" />
                        </f:title>
                        <f:layout>
                            <f:ResponsiveGridLayout
                                labelSpanXL="3"
                                labelSpanL="3"
                                labelSpanM="3"
                                labelSpanS="12"
                                adjustLabelSpan="false"
                                emptySpanXL="4"
                                emptySpanL="4"
                                emptySpanM="4"
                                emptySpanS="0"
                                columnsXL="1"
                                columnsL="1"
                                columnsM="1"
                                singleContainerFullSize="false"
                            />
                        </f:layout>

                        <f:formContainers>
                            <f:FormContainer>
                                <f:formElements>
                                    <f:FormElement label="Product ID">
                                        <f:fields>
                                            <Input
                                                id="TxtProductId"
                                                value=""
                                            />
                                        </f:fields>
                                    </f:FormElement>

                                    <f:FormElement label="Main Category">
                                        <f:fields>
                                            <ComboBox
                                                id="cboMainCategory"
                                                items="{ path: 'mproducts>/MainCategories', sorter: { path: 'text'}}"
                                            >
                                                <core:Item key="{ path: 'mproducts>key'}" text="{ path:'mproducts>text'}"/>
                                            </ComboBox>
                                            <ComboBox
                                                id="cboCategory"
                                                items="{ path: 'mproducts>/Categories', sorter: { path: 'text'}}"
                                            >
                                                <core:Item key="{ path: 'mproducts>key'}" text="{ path:'mproducts>text'}"/>
                                            </ComboBox>
                                        </f:fields>
                                    </f:FormElement>

                                    <f:FormElement label="Name">
                                        <f:fields>
                                            <Input
                                                id="TxtName"
                                                value=""
                                            />
                                        </f:fields>
                                    </f:FormElement>

                                    <f:FormElement label="Description">
                                        <f:fields>
                                            <Input
                                                id="TxtDescription"
                                                value=""
                                            />
                                        </f:fields>
                                    </f:FormElement>

                                </f:formElements>
                            </f:FormContainer>
                        </f:formContainers>
                    </f:Form>
                </VBox>
            </l:Grid>
        </content>
    </Page>
</mvc:View>

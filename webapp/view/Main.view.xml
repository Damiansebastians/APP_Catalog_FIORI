<mvc:View
    controllerName="appcatalog.controller.Main"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:f="sap.f"
>
    <Page
        id="page"
        title="{i18n>title}"
    >
        <content>
            <ScrollContainer
                width="100%"
                height="100%"
                vertical="true"
            >
                <Panel
                    headerText="MIS APLICACIONES"
                    class='sapUiTinyMargin'
                    width="auto"
                >
                    <f:GridContainer
                        class="sapuiSmallMargin"
                        items="{mTiles>/TileCollection}"
                    >
                        <f:layout>
                            <f:GridContainerSettings
                                rowSize="5rem"
                                columnSize="5rem"
                                gap="1rem"

                            />
                        </f:layout>
                        <f:layoutS>
                            <f:GridContainerSettings
                                rowSize="4rem"
                                columnSize="3rem"
                                gap="3rem"
                            />
                        </f:layoutS>
                        <GenericTile
                            class="tileLayout"
                            header="{mTiles>Title}"
                            subheader="{mTiles>Descripcion}"
                            press="OnPressTile"
                            frameType="OneByOne"
                        >
                            <layoutData>
                                <f:GridContainerItemLayoutData
                                    rows="2"
                                    columns="2"
                                />
                            </layoutData>

                            <TileContent>
                                <ImageContent
                                    src="{mTiles>Icon}"
                                />
                            </TileContent>
                        </GenericTile>
                    </f:GridContainer>
                </Panel>
            </ScrollContainer>
        </content>
    </Page>
</mvc:View>
